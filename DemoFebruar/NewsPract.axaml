<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1900" d:DesignHeight="990"
		x:CompileBindings="False"
        x:Class="DemoFebruar.NewsPract"
        Title="Публичный портал">
	<Border Background="White">
		<Grid ShowGridLines="False"
			  ColumnDefinitions="*"
			  RowDefinitions="*,9*">

			<DockPanel Grid.Row="0"
					   Background="#e1f4c8">

				<Border CornerRadius="45"
						BorderThickness="1"
						BorderBrush="Black"
						Height="75"
						Width="75"
						Margin="10 0 0 0"
						Background="#78b24b"
						HorizontalAlignment="Left"
						VerticalAlignment="Center">

					<TextBlock Text="Логотип"
							   FontWeight="Bold"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center"/>
				</Border>

				<TextBox Watermark="Организационная структура"
						 Text=""
						 Name="SearchText"
						 TextChanged="TextBox_TextChanged"
						 Background="White"
						 Margin="40 0 0 0"
						 CornerRadius="10"
						 Width="1400"
						 Height="40"
						 HorizontalAlignment="Left"
						 VerticalAlignment="Center"/>



				<Button Grid.Column="0"
						Grid.Row="0"
						Click="Button_Click_Out"
						Background="#78b24b"
						HorizontalAlignment="Right"
						VerticalAlignment="Center"
						Margin="0 0 25 0">
					<TextBlock Text="Выйти"
							   Foreground="White"
							   FontWeight="Bold"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center"/>
				</Button>

			</DockPanel>

			<Border Grid.Row="1">
				<Grid ColumnDefinitions="*,3*"
					  RowDefinitions="200,390,*"
					  ShowGridLines="False"
					  Margin="20 20 20 10">

					<StackPanel Grid.ColumnSpan="2"
								Grid.Row="0">

						<TextBlock Text="Сотрудники"
								   FontWeight="Bold"
								   Foreground="Black"
								   FontSize="21"
								   Margin="0 0 0 10"/>

						<ListBox BorderThickness="0"
								 Background="White"
								 Height="160"
								 Width="1100"
								 HorizontalAlignment="Left"
								 Name="Listbox_Employee">

							<ListBox.ItemsPanel>
								<ItemsPanelTemplate>
									<WrapPanel HorizontalAlignment="Left"/>
								</ItemsPanelTemplate>
							</ListBox.ItemsPanel>

							<ListBox.ItemTemplate>
								<DataTemplate>
									<Border Background="#78b24b">
										<Grid ColumnDefinitions="195"
											  RowDefinitions="145"
											  ShowGridLines="True">

											<StackPanel>

												<TextBlock Text="{Binding Fio}"
														   TextWrapping="Wrap"
														   Margin="10 10 0 0"
														   Foreground="White"
														   FontSize="16"
														   FontWeight="Bold"/>

												<TextBlock Text="{Binding JobTitleNavigation.Name}"
														   TextWrapping="Wrap"
														   Margin="10 3 0 0"
														   Foreground="White"
														   FontSize="13"/>

												<TextBlock Text="{Binding CorporateEmail}"
														   TextWrapping="Wrap"
														   TextDecorations="Underline"
														   Margin="10 0 0 0"
														   Foreground="White"
														   FontSize="13"/>

												<TextBlock Text="{Binding WorkPhone}"
														   TextWrapping="Wrap"
														   Margin="10 5 0 0"
														   Foreground="White"
														   FontSize="11"/>

												<DockPanel>

													<TextBlock Text="15 декабря"
															   TextWrapping="Wrap"
															   Margin="10 5 0 0"
															   Foreground="White"
															   FontSize="13"/>

													<Button Height="35"
															Width="35"
															Margin="0 0 10 0"
															HorizontalAlignment="Right"
															Opacity="0.02">

														<Image Source="/Assets/discet.png.png"
															   Opacity="100.0"/>

													</Button>

												</DockPanel>

											</StackPanel>
										</Grid>
									</Border>
								</DataTemplate>
							</ListBox.ItemTemplate>
						</ListBox>

					</StackPanel>

					<StackPanel Grid.Column="0"
								Grid.Row="1">

						<TextBlock Text="Календарь событий"
								   FontWeight="Bold"
								   Foreground="Black"
								   FontSize="21"
								   Margin="0 10 0 10"/>

						<Calendar HorizontalAlignment="Left"
								  VerticalAlignment="Top"
								  Background="#78b24b">


						</Calendar>
					</StackPanel>




					<StackPanel Grid.Column="0"
								Grid.Row="2">

						<TextBlock Text="События"
								   FontWeight="Bold"
								   Foreground="Black"
								   FontSize="21"
								   Margin="0 10 0 10"/>

						<ListBox BorderThickness="2"
								 Height="220"
								 Background="White"
								 Margin="0 0 10 0">
							<ListBox.ItemTemplate>
								<DataTemplate>
									<Border>
										<Grid>
											<TextBlock Text=""/>
										</Grid>
									</Border>
								</DataTemplate>
							</ListBox.ItemTemplate>
						</ListBox>

					</StackPanel>





					<StackPanel Grid.Column="1"
								Grid.RowSpan="3"
								Margin="10 200 0 0">

						<TextBlock Text="Новости"
								   FontWeight="Bold"
								   Foreground="Black"
								   FontSize="21"
								   Margin="0 10 0 10"/>

						<ListBox BorderThickness="0"
								 Background="White"
								 Height="610"
								 Name="Listbox_News">

							<ListBox.ItemsPanel>
								<ItemsPanelTemplate>
									<WrapPanel HorizontalAlignment="Left"/>
								</ItemsPanelTemplate>
							</ListBox.ItemsPanel>

							<ListBox.ItemTemplate>
								<DataTemplate>
									<Border Background="Silver">
										<Grid ColumnDefinitions="410"
											  RowDefinitions="175, 155, 20"
											  ShowGridLines="False">

											<StackPanel Grid.Row="1"
														Background="#78b24b">

												<TextBlock Text="{Binding title}"
														   TextWrapping="Wrap"
														   Foreground="White"
														   FontWeight="Bold"
														   FontSize="16"
														   Margin="10 10 10 5"/>

												<ScrollViewer VerticalScrollBarVisibility="Auto"
															  HorizontalScrollBarVisibility="Disabled"
															  MaxHeight="70"
															  Margin="10 0 10 10">

													<TextBlock Text="{Binding description}"
															   TextWrapping="Wrap"
															   Foreground="White"
															   FontSize="14"/>

												</ScrollViewer>

											</StackPanel>

											<StackPanel Grid.Row="2"
														Background="#78b24b">

												<TextBlock Text="{Binding date}"
														   Foreground="White"
														   FontWeight="Bold"
														   FontSize="12"
														   Margin="10 0 0 0"/>
											</StackPanel>

										</Grid>
									</Border>
								</DataTemplate>
							</ListBox.ItemTemplate>
						</ListBox>
					</StackPanel>
				</Grid>
			</Border>
		</Grid>
	</Border>
</Window>