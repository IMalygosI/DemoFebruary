<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="DemoFebruar.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>

		<Style Selector="Window">
			
			<Setter Property="WindowStartupLocation" Value="CenterScreen"/>

			<Setter Property="MaxWidth" Value="1900"/>
			<Setter Property="MinWidth" Value="1300"/>
			<Setter Property="MaxHeight" Value="990"/>
			<Setter Property="MinHeight" Value="580"/>

			<Setter Property="Width" Value="1900"/>
			<Setter Property="Height" Value="990"/>

		</Style>

		<Style Selector="Button.Occent_Button">

			<Setter Property="Background" Value="#78b24b"/>
			<Setter Property="BorderThickness" Value="2"/>
			<Setter Property="BorderBrush" Value="Aqua"/>
			
			<Style Selector="^:pointTransition /template/ContentPresenter">


				<Setter Property="Background" Value="#78b24b"/>
				<Setter Property="BorderThickness" Value="2"/>
				<Setter Property="BorderBrush" Value="Aqua"/>
				
				
			</Style>
			
		</Style>
		

		<FluentTheme />
    </Application.Styles>
</Application>